<div style="background-repeat: no-repeat; background-size: cover; background-position:
 center center; height: 900px; background-image:
 url('https://res.cloudinary.com/ddicha2gs/image/upload/v1692927635/WechatIMG8_r2euuv.jpg')">
<div class="log-in-form">
  <div class="form-container">
    <div class="header-section">
      <h2 class="login-header">Log In</h2>
      <%= link_to "Sign Up", new_registration_path(resource_name), class: "sign-up-link login-signup", style: "text-decoration: none; padding-bottom: 10px;" %>
    </div>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <div>
          <%= f.input :email,
                      label: "Email",
                      placeholder: "example@email.com",
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email", class: "form-field" } %>
        </div>
        <div>
          <%= f.input :password,
                      required: false,
                      placeholder: "your password here...",
                      input_html: { autocomplete: "current-password", class: "form-field" } %>
        </div>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>
      <div class="form-actions">
  <%= f.button :submit, "Log in", class: "custom-button" %>
      </div>

    <% end %>
  </div>
</div>
</div>

