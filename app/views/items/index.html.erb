<div class="search-container">
  <div clas="border border-light">
    <%= form_with url: items_path, method: :get, class: "d-flex", style: "" do %>
      <%= text_field_tag :query, params[:query], class: "form-control border border-light-subtle", placeholder: "search"%>
      <%= submit_tag "🔍", name: "", class: "search-button" %>
    <% end %>
  </div>
</div>

<div class="horizontal-list-container">
  <ul class="horizontal-list">
    <li>
      <%= link_to  "Bag", root_path(category: "bag"), class:"h3 #{params[:category] == 'bag' ? 'active' : ''}" %>
    </li>
    <li>
      <%= link_to  "Belt", root_path(category: "belt"), class:"h3 #{params[:category] == 'belt' ? 'active' :''}"  %>
    </li>
  </ul>
</div>

