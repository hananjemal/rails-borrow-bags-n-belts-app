<div id="items" class="grid" style="padding: 60px;">
  <% if @items.any? %>
    <% @items.each do |item| %>
      <div class="product-cards-container">
        <div class="product-card">
          <div class="card-image">
            <%= cl_image_tag item.photo.key, width: 298, height: 300, crop: :auto %>
          </div>
          <div class="card-body">
            <h5 class="card-title"><%= item.brand %></h5>
            <div class="d-flex">
              <p class="p-text"><%= item.price %>$/day</p>
              <%= link_to "Rent", item_path(item), class: "btn btn-primary" %>
            </div>
          </div>
        </div>
      </div>
      <% end %>
  <% else %>
    <em>Sorry, no items found.</em>
  <% end %>
</div>
