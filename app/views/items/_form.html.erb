<%= simple_form_for(@item) do |f| %>
  <%= f.input :category, collection: Item::CATEGORY, prompt: "Select your category" %>
  <%= f.input :name %>
  <%= f.input :brand %>
  <%= f.input :size, collection: Item::SIZE, prompt: "Select your size" %>
  <%= f.input :color, collection: Item::COLORS, prompt: "Select your color" %>
  <%= f.input :photo, as: :file %>
  <%= f.input :description %>
  <%= f.input :price%>
  <%= f.input :availability %>
  <%= f.submit %>
<% end %>
