
<div class="x">
  <div class="row">
    <div class="col-md-6">
      <div class="listed-box">
        <h3 class="header-uprofile">Your Listed Items</h3>
        <% @items.each do |item| %>
          <div class="d-flex mb-3">
            <div class="d-flex flex-column justify-content-center">
            <div class="card-product">
        <%= cl_image_tag item.photo.key, html: { class: "card-product img" } %>
    <div class="card-product-infos">
      <h2><%= item.brand %></h2>
      <p><%= item.description %></p>
      <p><%= link_to "Edit", edit_item_path(item), class: "custom-link" %></p>
      <p class="ml-3"><%= link_to "Delete", item_path(item), class: "btn btn-primary", data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %></p>
</div>
</div>
            </div>
          </div>
        <% end %>
        <div class="text-center">
          <%= link_to "New Rental", new_item_path, class: "btn btn-primary" %>
        </div>
      </div>
    </div>
    <div class="col-md-6">
      <div class="listed-box">
        <h3 class="header-uprofile-right">Your Rented Selection</h3>
        <% @bookings.each do |booking| %>
         <div class="card-product">
  <img src="<%= cl_image_tag booking.item.photo.key, html: { class: "card-product img" } %>
  <div class="card-product-infos">
    <h2><%= booking.item.brand %></h2>
    <p><%= booking.item.name %></p>
    <p><%= booking.item.category %></p>
    <p><%= booking.from %> - <%= booking.to %></p>
   <p>total price: <%= booking.rental_duration * booking.item.price %></p>
</div>
            <div class="d-flex flex-column justify-content-center ml-auto">
              <p><%= link_to "Delete booking", booking_path(booking), class: "btn btn-primary", data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %></p>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>

</div>

<%= link_to "New Rental", new_item_path %>

<h3>Your Rented Selection</h3>

<% @bookings.each do |booking| %>
<%= booking.from %><%= booking.to %>
<%= booking.item.category %>
<%= booking.item.name%>
<%= booking.item.brand %>
<p>total price: <%=booking.rental_duration * booking.item.price%></p>
<%= link_to "Delete booking", booking_path(booking), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}%>

<% end %>
